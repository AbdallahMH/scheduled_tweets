<div class="d-flex justify-content-between align-items-center">
<h1>Tweets</h1>

  <% if Current.user.twitter_accounts.any? %>
  <%= link_to "Schedule a Tweet", new_tweet_path, class: "btn btn-primary" %>
  <% end %>
</div>

<% if Current.user.twitter_accounts.none? %>
  <%= form_tag('/auth/twitter', method: 'post', data: {turbo: false}) do %>
    <button class="btn btn-primary" type='submit'>Connect a Twitter account</button>
  <% end %>
<% end %>

<%= render @tweets %>